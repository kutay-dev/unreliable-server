generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  GOD
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  @@map("users")
}

model Chat {
  id        Int      @id @default(autoincrement())
  username  String
  text      String
  createdAt DateTime @default(now())

  @@map("chats")
}
